{{>layouts/header}}
<table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">title</th>
        <th scope="col">content</th>
      </tr>
    </thead>
    <tbody>
        {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{#title}}{{title}}{{/title}}
              {{^title}}널입니다.{{/title}}
            </td>
            <td>{{#content}}{{content}}{{/content}}
              {{^content}}널입니다.{{/content}}</td>
        </tr>
        {{/article}}
    </tbody>
</table>
<h5>file</h5>
{{#file}}
<ol class="list-group">
  <li class="list-group-item">
    <a href="#" class="list-group-item list-group-item-action">{{fileName}}</a>
  </li>
</ol>
{{/file}}
<br/>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>
<a href="/articles">Go to Article list</a>

{{>comments/_comments}}

{{>layouts/footer}}