{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/update" method="post" enctype="multipart/form-data">
    <input name="id" type="hidden" value="{{id}}"/>
    <div class="mb-3">
        <label class="from-lable">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" row="3" name="content">{{content}}</textarea>
    </div>
    <div>
        <input type="file" class="form-control" name="file">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">제출</button>
    <a href="/articles/{{id}}">Back</a>
</form>
{{/article}}
{{>layouts/footer}}